<div>

<h1>Login</h1>
<%=form_tag session[:user] do%>
<%=text_field_tag :username, '', placeholder:'username'%>
<%=password_field_tag :password, '', placeholder:'password'%>
<%=submit_tag 'login'%>

<%end%>
<% if flash[:alert] %>
    <% flash[:alert].each do |t| %>
        <p><%=t%></p>
    <%end%>
<%end %>
<br>
<%= button_to "Log in with Google", '/auth/google_oauth2'%>
</div>